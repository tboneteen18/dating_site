<h1 class = "page-header">Bio Edit</h1>
<%= form_for(current_user, url: root_path, html: {class: 'form'}) do |f| %>
<div class="form-group">
  <%= f.label(:bio, class: 'form-label') %>
  <%= f.text_area(:bio, class: 'form-control') %>
</div>
<div class="form-group">
<%= f.submit('Comfirm Edit', class: 'btn btn-lg btn-success') %>
</div>
<% end %>
